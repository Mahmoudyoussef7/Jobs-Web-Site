@model IEnumerable<Job_offers.Models.ApplyForJob>

@{
    ViewBag.Title = "GetJobsByUser";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>الوظائف التى تم التقدم إليها</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.job.JobName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Message)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplyDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.job.JobName)
    </td>
    <td>
        @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(modelItem => item.Message).ToString()))
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ApplyDate)
    </td>
    <td>
        @Html.ActionLink("تعديل", "EditAppliedJob", new { id = item.ID }) |
        @Html.ActionLink("تفاصيل", "DetailsOfJob", new { id = item.ID }) |
        @Html.ActionLink("حذف", "DeleteAppliedJob", new { id = item.ID })
    </td>
</tr>
}

</table>
